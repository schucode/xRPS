<% unless @noheader %>
	<% if @username %>
		<div class="row">
			<div class="large-3 medium-3 small-3 large-offset-9 medium-offset-9 small-offset-9 columns">
				<div class="row">
			      <div class="large-10 columns">
			   	<form method="post" action="/logout">
			   		<input class="button tiny right" type="submit" value="Log Out">
			   	</form>
				  </div>
				</div>				
    		</div>
		</div>
	</div>
	<% else %>
		<div class="clearfix">
			<div class="large-5 large-offset-7 columns">
				<div class="row">
					<div class="large-4 columns">
					<form method="post" action='/signin'>
						<input type="text" name="username" placeholder="username"/>
					</div>
					<div class="large-4 columns">
						<input type="text" name="password" placeholder="password"/>
					</div>
					<div class="large-4 columns">
						<input type="submit" class="button tiny" value="Sign In"/>
				</form>
					</div>
				</div>
			</div>
		</div>
	<% end %>
<% end %>

<div class="row">
			<div class="large-6 large-3">
            <img src="/images/how-about.jpg" width="393" height="99">
        </div>
        </div>